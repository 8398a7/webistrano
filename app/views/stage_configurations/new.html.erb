<% content_for(:breadcrumb) do %>
  <%= breadcrumb_box do %>
    <%= link_to "Projects", projects_path %>
    <span class="divider">&raquo;</span>
    Project <%= link_to current_project.name, project_path(current_project) %>
    <span class="divider">&raquo;</span>
    Stage <%= link_to current_stage.name, project_stage_path(current_project, current_stage) %>
    <span class="divider">&raquo;</span>
    New
  <% end %>
<% end %>

<% content_for(:page_title) do %>
  <% @page_title = "New configuration" %>
  <h2>New configuration</h2>
<% end %>

<% flashed_errors(:configuration) %>

<div>
  <%= form_for @configuration, :url => project_stage_stage_configurations_path(@project, @stage), :html => {:class => "form-horizontal"} do |f| %>
    <%= render :partial => 'project_configurations/form', :locals => {:form => f} %>
    <div class="form-actions">
      <%= f.submit :class => "btn btn-primary" %>
      <%= link_to 'Back to stage', project_stage_path(@project, @stage), :class => 'arrow_link ontheright' %>
    </div>
  <% end %>
</div>
